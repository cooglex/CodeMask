<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ControlDefaultFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border>
                        <Rectangle Margin="2"
                                   SnapsToDevicePixels="true"
                                   Stroke="Black"
                                   StrokeDashArray="1 2"
                                   StrokeThickness="1" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ControlDefaultStyle" TargetType="Control">
        <!--  <Setter Property="Padding" Value="0"/>  -->
        <!--  <Setter Property="FontFamily" Value="Fonts/#Microsoft YaHei" />  -->
        <Setter Property="Foreground" Value="{StaticResource Window_ForegroundBrush}" />
        <!--  <Setter Property="TextOptions.TextFormattingMode" Value="Display" />  -->
        <!--  <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />  -->
    </Style>
</ResourceDictionary>